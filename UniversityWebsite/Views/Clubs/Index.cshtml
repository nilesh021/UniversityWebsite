@model IEnumerable<UniversityWebsite.Models.Club>

@{
    ViewBag.Title = "Index";
}

@if (Session["UserType"].Equals("Admin"))
{
    <br />
    <p>
        <input type="button" class="btn btn-primary" value="Back to dashboard" onclick="location.href='@Url.Action("AdminDashBoard","Admins")'" />
    </p>

}

@if (Session["UserType"].Equals("User"))
{
    <br />
    <p>
        <input type="button" class="btn btn-primary" value="Back to dashboard" onclick="location.href='@Url.Action("UserDashBoard","Users")'" />
    </p>

}

<h2>Clubs</h2>


@if (Session["UserType"].Equals("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Club_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Max_Member)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Club_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Max_Member)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Club_Id })

                @if (@Session["UserType"].Equals("Admin"))
                {
                    <div>
                        |@Html.ActionLink("Edit", "Edit", new { id = item.Club_Id })
                        |@Html.ActionLink("Delete", "Delete", new { id = item.Club_Id })
                    </div>
                }

            </td>
        </tr>
    }

</table>
