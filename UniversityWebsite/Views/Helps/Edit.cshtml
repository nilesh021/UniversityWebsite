@model UniversityWebsite.Models.Help

@{
    ViewBag.Title = "Edit";
}

<h2>Add Resolution For Help Ticket</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
   
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.HelpId)
    @Html.HiddenFor(model => model.User_Id)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.Issue)
    @Html.HiddenFor(model => model.Description)
    @Html.HiddenFor(model => model.DOT)

    <div class="form-group">
        @Html.LabelFor(model => model.AdminResolution, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.AdminResolution, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AdminResolution, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
