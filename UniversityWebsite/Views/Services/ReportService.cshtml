@model IEnumerable<UniversityWebsite.Models.Service>

@{
    ViewBag.Title = "ReportService";
}
<br />
<p>
    <input type="button" class="btn btn-primary" value="Back to dashboard" onclick="location.href='@Url.Action("AdminDashBoard","Admins")'" />
</p>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.Label("Enter From Date", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("fromdate", new { htmlAttributes = new { @class = "datefield", type = "date", required = "required" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Enter To Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Todate", new { htmlAttributes = new { @class = "datefield", type = "date", required = "required" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="filterButton" value="Filter" class="btn btn-default" />

            </div>
        </div>
    </div>

}


<h3>@ViewBag.Message</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Service_Id)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Service_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Service_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Required_Volunteer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Participated_Volunteer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start_Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)//list
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Service_Id)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Service_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Required_Volunteer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Participated_Volunteer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start_Date)
            </td>
        </tr>
    }

</table>






